{% extends 'base.html.twig' %}

{% block title %}Zenbourse{% endblock %}

{% block body %}
    {% include 'home/partials/menu.html.twig' %}
    <main class="container">
            {% for label, messages in  app.flashes%}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} text-center fw-bold">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

        <div class="row g-5" >
            <div class="col-md-8">
                <div class="card text-dark mb-4 border-0 shadow-sm">
                    <img src="{{ asset('/images/1721291860185blob.jpg') }}" class="card-img" alt="fond">
                    <div class="card-img-overlay mt-4">
                        <h3 class="fst-italic card-title">« Se simplifier la vie c'est le luxe suprême ! »</h3>
                        <p class="card-text">Léonard de Vinci.</p>
                        <p class="card-text">
                            Une méthode simple c'est le luxe suprême ! <br> La méthode ZENBOURSE c'est le luxe suprême !
                        </p>
                    </div>
                </div>
                <h3 class="pb-4 mb-4 fst-italic border-bottom">Les boîtes de DARVAS</h3>
                <div class="" id="article-liste">
                    {% include 'article/homeArticle.html.twig' with {homeArticle} %}
                </div>
            </div>   
            <div class="col-md-4">

                {% include 'home/partials/widget.html.twig' %}

            </div>

        </div>   
    
    </main>
{% endblock %}
