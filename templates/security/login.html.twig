{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% include 'registration/partials/menu.html.twig' %}
    <div class="container m-auto mt-5 col-md-4 bg-light p-4">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h2 class="mb-3 font-weight-normal fst-italic">Se connecter</h2>
            <label for="inputEmail" class="mb-2">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Entrez votre email" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword" class="mb-2 mt-4">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Entrez votre mot de passe" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <button class="zen-button btn btn-light text-light my-3 w-100" type="submit" aria-pressed="true">
                Se connecter
            </button>
        </form>

        {#<p>
            Vous n'avez pas de compte ? <a href="{{ path('app_register') }}">S'inscrire</a>
        </p>#}
    </div>

{% endblock %}
